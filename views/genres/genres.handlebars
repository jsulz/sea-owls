<article>
	<h2 class="page-title">Genres</h2>
	<h3>Add a New Genre</h3>
	<form action="/genres" method="POST" id="new-genre">

		<fieldset>
			<label for="name">Name
				<input type="text" id="add-name" name="name">
			</label>

			<input type="submit" id="new-genre-submit" name="add" value="Submit">
		</fieldset>

	</form>
	<h3>Current Genres in the Library</h3>
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		{{#each genres}}
			<tr>
				<td>{{this.name}}</td>
				<td>
					<form>
						<input type="hidden" value="{{this.id}}" />
						<input type="submit" class="edit" name="edit" value="Edit" />
					</form>
				</td>
				<td>
					<form action="/genres" method="POST" id="delete-genre">
						<input type="hidden" value="{{this.id}}" name="genreID"/>
						<input type="submit" class="delete" name="delete" value="Delete" />
					</form>
				</td>
			</tr>
		{{/each}}
	</table>
</article>
