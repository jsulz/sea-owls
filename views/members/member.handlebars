<article>
	{{#each member}}
	<h2 class="page-title">{{this.fname}} {{this.lname}}</h2>
	<h3>Member Info</h3>
	<ul>
		<li>{{this.email}}</li>
		<li>{{this.dateJoined}}</li>
	</ul>
	{{/each}}
	<h3>Reading List</h3>
	<p>Add a book to the reading list below by selecting from the current Sea Owls Library:</p>
	<form method="POST">
		<select name="bid">
			{{#each books}}
			<option value="{{this.id}}">{{this.title}}</option>
			{{/each}}
		</select>
		<input type="submit" name="add-to-reading-list" name="Add to List">
	</form>
	<table>
		<thead>
			<tr>
				<th>Book Title</th>
				<th>Read/Reading</th>
				<th>Delete</th>
			</tr>			
		</thead>
		<tbody>
			{{#each readingList}}
				<tr>
					<td>{{this.title}}</td>
					<td>
						{{this.finished}}
						<form method="POST" style="display: inline-block">
							<input type="hidden" name="edit-mid-bid" value="{{this.mid}}-{{this.bid}}" />
							<select name="finished">
								<option value="0">0</option>
								<option value="1">1</option>
							</select>
							<input type="submit" class="edit" name="edit" value="Update Reading/Read" />
						</form>
					</td>
					<td>
						<form method="POST">
							<input type="hidden" name="mid-bid" value="{{this.mid}}-{{this.bid}}" />
							<input type="submit" class="delete" name="delete" value="Delete" />
						</form>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</article>